{{> layout/company-header}}

<!-- 본문 -->
<div class="bg-light">
    <div class="main container">
        <div class="d-flex">
            <!-- 왼쪽 -->
            <div class="left-panel bg-white p-3 mt-4 ms-4 mb-4">
                <h4 class="fw-bold mb-4">지원자 관리</h4>
                <button class="btn btn-sm btn-outline-primary mb-2 w-100 fs-5"><strong>전체
                    포지션</strong></button>

                <div class="card mb-2">
                    <div class="card-body text-center" data-bs-toggle="collapse"
                         data-bs-target="#inProgress" style="cursor: pointer;">
                        <strong>진행중 포지션</strong>
                    </div>
                </div>
                <!-- 진행중 포지션 -->
                <div class="collapse" id="inProgress">
                    <div class="card">
                        <ul class="list-group list-group-flush">
                            {{#positions}}
                                {{^isClosed}} <!-- 마감되지 않은 포지션만 -->
                                    <a href="/company/applicant/list?jobPostingId={{jobPostingId}}" class="list-group-item">
                                    {{title}}
                                    </a>
                                {{/isClosed}}
                            {{/positions}}
                        </ul>
                    </div>
                </div>

                <div class="card mb-2">
                    <div class="card-body text-center" data-bs-toggle="collapse" data-bs-target="#ended"
                         style="cursor: pointer;">
                        <strong>마감된 포지션</strong>
                    </div>
                </div>
                <!-- 마감된 포지션 -->
                <div class="collapse" id="ended">
                    <div class="card">
                        <ul class="list-group list-group-flush">
                            {{#positions}}
                                {{#isClosed}} <!-- ✅ 마감된 포지션만 -->
                                    <a href="/company/applicant/list?jobPostingId={{jobPostingId}}" class="list-group-item">
                                    {{title}}
                                    </a>
                                {{/isClosed}}
                            {{/positions}}
                        </ul>
                    </div>
                </div>

            </div>

            <!-- 오른쪽 -->
            <div class="right-panel d-flex flex-column mt-4 me-4 ms-3">
                <!-- 위쪽 -->
                <div class="p-3 bg-white mb-3">
                    <button onclick="filterApplicants(null, null)" class="btn btn-outline-primary">전체</button>
                    <button onclick="filterApplicants(null, true)" class="btn btn-outline-primary">합격</button>
                    <button onclick="filterApplicants(null, false)" class="btn btn-outline-primary">불합격</button>
                </div>

                <!-- 아래쪽  -->
                <div class="flex-grow-1 bg-white p-3 mb-4">
                    <button class="btn btn-outline-primary dropdown-toggle mt-1 mb-3 ms-1 rounded-2"
                            type="button" data-bs-toggle="dropdown">
                        열람여부
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="filterApplicants(true, null)">열람</a></li>
                        <li><a class="dropdown-item" href="#" onclick="filterApplicants(false, null)">미열람</a></li>
                    </ul>
                    <button class="btn btn-outline-primary mt-1 mb-3 ms-1 rounded-2" onclick="filterApplicants(null, true)">스크랩 지원자</button>


                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>스크랩</th>
                            <th>지원일</th>
                            <th>지원자</th>
                            <th>지원포지션</th>
                            <th>지원상태 및 평가</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#models}}
                            <tr>
                                <td>
                                    {{#isBookmarked}}
                                        <i class="fa fa-star text-warning ms-4 bookmark-icon"
                                           id="bookmark-{{applicationId}}"
                                           style="cursor: pointer;"
                                           onclick="deleteBookmark({{applicationId}})"></i>
                                    {{/isBookmarked}}

                                    {{^isBookmarked}}
                                        <i class="fa fa-star-o ms-4 bookmark-icon"
                                           id="bookmark-{{applicationId}}"
                                           style="cursor: pointer;"
                                           onclick="saveBookmark({{applicationId}})"></i>
                                    {{/isBookmarked}}
                                </td>
                                <td>{{appliedDate}}</td>
                                <td>
                                    <a href="/resume/{{resumeId}}" class="text-decoration-none text-dark">
                                        {{applicantName}}
                                    </a>
                                </td>
                                <td>{{jobTitle}}</td>
                                <td>{{evaluationStatus}}</td>
                            </tr>
                        {{/models}}

                        {{^models}}
                            <tr>
                                <td colspan="5" class="text-center text-muted">지원자가 없습니다.</td>
                            </tr>
                        {{/models}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 본문 끝 -->
<script>

    async function saveBookmark(applicationId) {
        try {
            const response = await fetch(`/api/bookmark`, {
                method: "POST",
                body: JSON.stringify({ applicationId: applicationId }),
                headers: { "Content-Type": "application/json" }
            });

            const result = await response.json();

            if (result.status === 200) {
                const icon = document.querySelector(`#bookmark-${applicationId}`);
                icon.classList.remove("fa-star-o");
                icon.classList.add("fa-star", "text-warning");
                icon.setAttribute("onclick", `deleteBookmark(${applicationId})`);
            } else {
                alert(result.msg);
            }
        } catch (e) {
            console.error("스크랩 등록 중 오류:", e);
        }
    }

    async function deleteBookmark(applicationId) {
        try {
            const response = await fetch(`/api/bookmark/${applicationId}`, {
                method: "DELETE"
            });

            const result = await response.json();

            if (result.status === 200) {
                const icon = document.querySelector(`#bookmark-${applicationId}`);
                icon.classList.remove("fa-star", "text-warning");
                icon.classList.add("fa-star-o");
                icon.setAttribute("onclick", `saveBookmark(${applicationId})`);
            } else {
                alert(result.msg);
            }
        } catch (e) {
            console.error("스크랩 삭제 중 오류:", e);
        }
    }
</script>




{{> layout/company-header}}

            <!-- 본문 -->
            <div class="main container mt-5">
                <div class="editContainer">
                    <!-- 왼쪽 이미지 박스 -->
                    <div class="leftImageBox">
                        <img src="/img/logo2.png" alt="회원정보 수정 이미지"> <!-- 이미지 경로 삽입 필요 -->
                    </div>

                    <!-- 세로 줄 추가 -->
                    <div class="verticalLine"></div>

                    <!-- 정보 수정 폼 -->
                    <div class="editForm">
                        <h3 class="mb-4 fw-bold fs-3 text-dark">회원 정보 수정</h3> <!-- 제목 -->

                        <!-- 아이디 입력 -->
                        <div class="mb-3">
                            <label for="userId" class="form-label">아이디</label>
                            <div class="emailRow">
                                <input type="text" class="form-control" id="userId"
                                    placeholder="4~20자 / 영문, 숫자, 특수문자 *_ 사용가능" readonly value="jumpit123">
                            </div>
                        </div>

                        <!-- 새 비밀번호 입력 필드 -->
                        <div class="mb-3">
                            <label for="password" class="form-label">새 비밀번호</label>
                            <input type="password" class="form-control" id="password" placeholder="새 비밀번호 입력">
                        </div>

                        <!-- 새 비밀번호 입력 필드 -->
                        <div class="mb-3">
                            <label for="password" class="form-label">새 비밀번호 확인</label>
                            <input type="password" class="form-control" id="password" placeholder="새 비밀번호 입력">
                        </div>

                        <!-- 기업 이메일 입력 필드 -->
                        <div class="mb-3">
                            <label for="companyEmail" class="form-label">기업 이메일</label>
                            <input type="email" class="form-control" id="companyEmail" value="company@example.com"
                                readonly>
                            <!-- 이메일 입력 필드 (수정 불가) -->
                        </div>

                        <!-- 담당자 연락처 입력 필드 -->
                        <div class="mb-3">
                            <label for="managerPhone" class="form-label">담당자 연락처</label>
                            <input type="text" class="form-control" id="managerPhone" placeholder="010-0000-0000">
                            <!-- 담당자 연락처 입력 필드 -->
                        </div>

                        <!-- 정보 수정 완료 버튼 -->
                        <button class="btn btn-primary btnEdit" onclick="submitEdit()">회원정보 수정</button>
                        <!-- 버튼 클릭 시 submitEdit() 함수 호출 -->
                    </div>
                </div>
            </div>
            <!-- 본문 끝 -->

{{> layout/footer}}
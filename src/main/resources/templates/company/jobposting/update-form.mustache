{{> layout/company-header}}

<div class="main container mt-5">
    <div class="container">
        <div class="bg-white p-5 rounded shadow">
            <h2 class="mb-4 fw-bold">채용 포지션 수정</h2>
            <form class="row g-4" action="/jobposting/{{model.id}}/update" method="post">
                <div class="col-md-6">
                    <label class="form-label">직무 <span class="text-danger">*</span></label>
                    <select class="form-select" name="positionType">
                        <option disabled {{^model.positionType}}selected{{/model.positionType}}>선택하세요</option>
                        <option value="프론트엔드">프론트엔드</option>
                        <option value="백엔드">백엔드</option>
                        <option value="AI 엔지니어">AI 엔지니어</option>
                        {{#model.positionType}}
                            <option value="{{model.positionType}}" selected>{{model.positionType}}</option>
                        {{/model.positionType}}
                    </select>
                </div>
                <div class="mb-3">
                    <div class="mb-3">
                        <label class="form-label">기술 스택 <span class="text-danger">*</span></label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="React"
                                       id="tech1"/>
                                <label class="form-check-label" for="tech1">React</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="JavaScript"
                                       id="tech2"/>
                                <label class="form-check-label" for="tech2">JavaScript</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Vue"
                                       id="tech3"/>
                                <label class="form-check-label" for="tech3">Vue</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="TypeScript"
                                       id="tech4"/>
                                <label class="form-check-label" for="tech4">TypeScript</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Angular"
                                       id="tech5"/>
                                <label class="form-check-label" for="tech5">Angular</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Node.js"
                                       id="tech6"/>
                                <label class="form-check-label" for="tech6">Node.js</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Java"
                                       id="tech7"/>
                                <label class="form-check-label" for="tech7">Java</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Spring Boot"
                                       id="tech8"/>
                                <label class="form-check-label" for="tech8">Spring Boot</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Python"
                                       id="tech9"/>
                                <label class="form-check-label" for="tech9">Python</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Django"
                                       id="tech10"/>
                                <label class="form-check-label" for="tech10">Django</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="NestJS"
                                       id="tech11"/>
                                <label class="form-check-label" for="tech11">NestJS</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="MySQL"
                                       id="tech12"/>
                                <label class="form-check-label" for="tech12">MySQL</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="PostgreSQL"
                                       id="tech13"/>
                                <label class="form-check-label" for="tech13">PostgreSQL</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="MongoDB"
                                       id="tech14"/>
                                <label class="form-check-label" for="tech14">MongoDB</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Redis"
                                       id="tech15"/>
                                <label class="form-check-label" for="tech15">Redis</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Docker"
                                       id="tech16"/>
                                <label class="form-check-label" for="tech16">Docker</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Kubernetes"
                                       id="tech17"/>
                                <label class="form-check-label" for="tech17">Kubernetes</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="AWS"
                                       id="tech18"/>
                                <label class="form-check-label" for="tech18">AWS</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="GCP"
                                       id="tech19"/>
                                <label class="form-check-label" for="tech19">GCP</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="techStack" value="Azure"
                                       id="tech20"/>
                                <label class="form-check-label" for="tech20">Azure</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-text">원하는 기술 스택을 모두 선택하세요</div>
                </div>

                <div class="col-12">
                    <div>포지션 제목 <span class="text-danger">*</span></div>
                    <textarea class="form-control" style="vertical-align: top; padding-top: 0.5rem" rows="3"
                              name="title" placeholder="서비스나 제품의 핵심이 되는 컴포넌트를 함께 만들며...">{{model.title}}</textarea>
                </div>

                <div class="col-md-6">
                    <div>포지션 마감일 <span class="text-danger">*</span></div>
                    <input type="date" class="form-control" name="deadline" value="{{model.deadline}}"/>
                </div>

                <div class="col-md-3">
                    <div>연차 (최소) <span class="text-danger">*</span></div>
                    <select class="form-select" name="minCareerLevel">
                        <option disabled selected>선택하세요</option>
                        <option value="1">1년 이하</option>
                        <option value="2">2년</option>
                        <option value="3">3년</option>
                        <option value="4">4년</option>
                        <option value="5">5년</option>
                        <option value="6">6년</option>
                        <option value="7">7년</option>
                        <option value="8">8년</option>
                        <option value="9">9년</option>
                        <option value="10">10년 이상</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <div>연차 (최대) <span class="text-danger">*</span></div>
                    <select class="form-select" name="maxCareerLevel">
                        <option disabled selected>선택하세요</option>
                        <option value="1">1년 이하</option>
                        <option value="2">2년</option>
                        <option value="3">3년</option>
                        <option value="4">4년</option>
                        <option value="5">5년</option>
                        <option value="6">6년</option>
                        <option value="7">7년</option>
                        <option value="8">8년</option>
                        <option value="9">9년</option>
                        <option value="10">10년 이상</option>
                    </select>
                </div>


                <div class="row g-3 align-items-end mt-3" style="max-width: 720px">
                    <div class="col-md-3">
                        <div>시/도 <span class="text-danger">*</span></div>
                        <select class="form-select" name="addressRegionId">
                            <option selected disabled>선택하세요</option>
                            <option value="1" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>서울특별시
                            </option>
                            <option value="2" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>부산광역시
                            </option>
                            <option value="3" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>대구광역시
                            </option>
                            <option value="4" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>인천광역시
                            </option>
                            <option value="5" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>광주광역시
                            </option>
                            <option value="6" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>대전광역시
                            </option>
                            <option value="7" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>울산광역시
                            </option>
                            <option value="8" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>세종특별자치시
                            </option>
                            <option value="31" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>경기도</option>
                            <option value="42" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>강원특별자치도
                            </option>
                            <option value="43" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>충청북도
                            </option>
                            <option value="44" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>충청남도
                            </option>
                            <option value="45" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>전라북도
                            </option>
                            <option value="46" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>전라남도
                            </option>
                            <option value="47" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>경상북도
                            </option>
                            <option value="48" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>경상남도
                            </option>
                            <option value="50" {{#model.addressRegionId}}selected{{/model.addressRegionId}}>제주특별자치도
                            </option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <div>시/군/구 <span class="text-danger">*</span></div>
                        <select class="form-select" name="addressSubRegionId">
                            <option selected disabled>선택하세요</option>
                            <option value="101" {{#model.addressSubRegionId}}selected{{/model.addressSubRegionId}}>강남구
                            </option>
                            <option value="102" {{#model.addressSubRegionId}}selected{{/model.addressSubRegionId}}>서초구
                            </option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <div>상세주소 <span class="text-danger">*</span></div>
                        <input class="form-control" name="addressDetail" placeholder="상세주소입력"
                               value="{{model.addressDetail}}"/>
                    </div>
                </div>

                <div class="col-12">
                    <div>서비스 소개</div>
                    <textarea class="form-control" name="serviceIntro"
                              placeholder="서비스에 대한 간략한 소개">{{model.serviceIntro}}</textarea>
                </div>

                <div class="col-12">
                    <div>담당 업무 <span class="text-danger">*</span></div>
                    <textarea class="form-control" name="responsibility"
                              placeholder="예: 프론트엔드 UI 개발">{{model.responsibility}}</textarea>
                </div>

                <div class="col-12">
                    <div>자격요건 <span class="text-danger">*</span></div>
                    <textarea class="form-control" name="qualification"
                              placeholder="예: React 경험 2년 이상">{{model.qualification}}</textarea>
                </div>

                <div class="col-12">
                    <div>학력 제한 <span class="text-danger">*</span></div>
                    <select class="form-select" name="educationLevel">
                        <option value="전체" {{#model.educationLevel}}selected{{/model.educationLevel}}>전체</option>
                        <option value="고등학교" {{#model.educationLevel}}selected{{/model.educationLevel}}>고등학교
                        </option>
                        <option value="전문학사" {{#model.educationLevel}}selected{{/model.educationLevel}}>전문학사
                        </option>
                        <option value="학사" {{#model.educationLevel}}selected{{/model.educationLevel}}>학사</option>
                        <option value="석사" {{#model.educationLevel}}selected{{/model.educationLevel}}>석사</option>
                        <option value="박사" {{#model.educationLevel}}selected{{/model.educationLevel}}>박사</option>
                    </select>
                </div>

                <div class="col-12">
                    <div>우대 사항</div>
                    <textarea class="form-control" name="preference"
                              placeholder="예: 오픈소스 기여 경험">{{model.preference}}</textarea>
                </div>

                <div class="col-12">
                    <div>복지및 혜택</div>
                    <textarea class="form-control" name="benefit"
                              placeholder="예: 점심 제공, 자율 출퇴근 등">{{model.benefit}}</textarea>
                </div>

                {{#model.additionalInfo}}
                    <div class="col-12">
                        <div>기타</div>
                        <textarea class="form-control" name="additionalInfo"
                                  placeholder="채용절차/지원방법 등">{{model.additionalInfo}}</textarea>
                    </div>
                {{/model.additionalInfo}}
                {{^model.additionalInfo}}
                    <div class="col-12">
                        <div>기타</div>
                        <textarea class="form-control" name="additionalInfo"
                                  placeholder="채용절차/지원방법 등"></textarea>
                    </div>
                {{/model.additionalInfo}}

                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100">수정하기</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{> layout/footer}}
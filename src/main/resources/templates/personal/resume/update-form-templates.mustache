<!-- 링크 template -->
<template id="linkTemplate">
    <div class="linkItem d-flex align-items-center gap-2 mb-2">
        <input type="hidden" class="linkId" value="" />
        <input type="text" class="form-control form-control-sm linkTitle" placeholder="* 링크 제목" value="GitHub" />
        <input type="text" class="form-control form-control-sm linkUrl" placeholder="* URL" value="https://github.com/example" />
        <button type="button" class="btn btn-outline-danger btn-sm removeItemBtn">삭제</button>
    </div>
</template>

<!-- 학력 template -->
<template id="educationTemplate">
    <div class="educationItem bg-white rounded-3 p-3 shadow-sm mb-3">
        <input type="hidden" class="educationId" value="" />
        <input type="month" class="form-control form-control-sm mb-2 educationDate" value="2025-02" />
        <div class="form-check">
            <input type="checkbox" class="form-check-input educationDropout" /> 중퇴
        </div>
        <select class="form-select form-select-sm educationLevel">
            <option>고등학교</option>
            <option>전문학사</option>
            <option selected>학사</option>
            <option>석사</option>
            <option>박사</option>
        </select>
        <input type="text" class="form-control form-control-sm educationSchool" placeholder="학교명" value="테스트대학교" />
        <input type="text" class="form-control form-control-sm educationMajor" placeholder="전공" value="소프트웨어학과" />
        <input type="number" class="form-control form-control-sm educationGpa" placeholder="GPA" value="4.1" />
        <select class="form-select form-select-sm educationGpaScale">
            <option>4.5</option>
            <option>4.3</option>
        </select>
        <button type="button" class="btn btn-outline-danger btn-sm mt-2 removeItemBtn">삭제</button>
    </div>
</template>

<!-- 경력 template -->
<template id="experienceTemplate">
    <div class="experienceItem bg-white rounded-3 p-3 shadow-sm mb-3">
        <input type="hidden" class="experienceId" value="" />
        <input type="date" class="form-control form-control-sm experienceStart" value="2022-03-01" />
        <input type="date" class="form-control form-control-sm experienceEnd" value="2024-04-01" />
        <input type="checkbox" class="form-check-input experienceEmployed" />
        <input type="text" class="form-control form-control-sm experienceCompany" placeholder="회사명" value="테스트컴퍼니" />
        <input type="text" class="form-control form-control-sm experienceSummary" placeholder="요약" value="AI 스타트업" />
        <input type="text" class="form-control form-control-sm experiencePosition" placeholder="직무" value="데이터엔지니어링팀" />
        <textarea class="form-control form-control-sm experienceResponsibility">백엔드 API 설계 및 개발</textarea>
        <div class="experienceTechList"></div>
        <button type="button" class="btn btn-outline-danger btn-sm mt-2 removeItemBtn">삭제</button>
    </div>
</template>

<!-- 프로젝트 template -->
<template id="projectTemplate">
    <div class="projectItem bg-white rounded-3 p-3 shadow-sm mb-3">
        <input type="hidden" class="projectId" value="" />
        <input type="date" class="form-control form-control-sm projectStart" value="2023-05-01" />
        <input type="date" class="form-control form-control-sm projectEnd" value="2024-01-01" />
        <input type="checkbox" class="form-check-input projectOngoing" />
        <input type="text" class="form-control form-control-sm projectTitle" placeholder="프로젝트명" value="테스트 프로젝트" />
        <input type="text" class="form-control form-control-sm projectSummary" placeholder="요약" value="웹서비스 구축" />
        <textarea class="form-control form-control-sm projectDescription">Node.js 백엔드 서버 개발</textarea>
        <input type="text" class="form-control form-control-sm mt-2 projectRepoUrl" placeholder="저장소 URL" value="https://github.com/test/project" />
        <div class="projectTechList"></div>
        <button type="button" class="btn btn-outline-danger btn-sm mt-2 removeItemBtn">삭제</button>
    </div>
</template>

<!-- 교육 template -->
<template id="trainingTemplate">
    <div class="trainingItem bg-white rounded-3 p-3 shadow-sm mb-3">
        <input type="hidden" class="trainingId" value="" />
        <input type="date" class="form-control form-control-sm trainingStart" value="2021-10-01" />
        <input type="date" class="form-control form-control-sm trainingEnd" value="2022-04-01" />
        <input type="checkbox" class="form-check-input trainingOngoing" />
        <input type="text" class="form-control form-control-sm trainingCourse" placeholder="교육 과정명" value="AI 부트캠프" />
        <input type="text" class="form-control form-control-sm trainingInstitution" placeholder="기관명" value="패스트캠퍼스" />
        <textarea class="form-control form-control-sm trainingDescription">머신러닝 모델링 과정</textarea>
        <div class="trainingTechList"></div>
        <button type="button" class="btn btn-outline-danger btn-sm mt-2 removeItemBtn">삭제</button>
    </div>
</template>

<!-- 기타 template -->

{{> layout/personal-header}}

<!-- 본문 -->
<div class="main container mt-5">
    <div class="content-wrapper">
        <div class="myJumpitWrapper">
            <div class="myJumpit">
                <h5>마이점핏</h5>
                <div class="menuItems">
                    <a href="/s/personal/mypage/application" class="mypageSidebarLink">입사지원 현황</a>
                    <a href="/s/personal/mypage/bookmark" class="mypageSidebarLink">스크랩 포지션</a>
                    <hr class="menuDivider">
                    <a href="/s/personal/user/update-form" class="mypageSidebarLink">계정 정보 설정</a>
                </div>
            </div>
        </div>
        <div class="myStatus">
            <div class="myStatusInner">
                <div class="myStatusTitle">마이 점핏</div>
                <!-- 지원 통계 영역 -->
                <div class="statusBoxes">
                    <div class="statusBox">
                        <h6>지원완료</h6>
                        <span class="statusCount">{{models.status.total}}</span>
                    </div>
                    <div class="statusBox">
                        <h6>최종합격</h6>
                        <span class="statusCount">{{models.status.passed}}</span>
                    </div>
                    <div class="statusBox">
                        <h6>불합격</h6>
                        <span class="statusCount">{{models.status.failed}}</span>
                    </div>
                </div>
            </div>
            <!-- 지원현황 목록 -->
            <div class="applyContainer">
                <h5 class="applyTitle">지원완료 총 {{models.status.total}}건</h5>
                <div class="applyList">
                    {{#models.applications}}
                        <div class="applyItem">
                            <div class="card mb-3">
                                <div class="card-body text-start rounded border-0 bg-white d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="card-title mb-2">{{companyName}}</h6>
                                        <h5 class="card-title mb-2">{{jobTitle}}</h5>
                                        <small>{{appliedDate}} 지원</small>
                                    </div>

                                    <div class="d-flex flex-column align-items-end">
                                        <a href="/s/personal/resume/{{resumeId}}"
                                           class="btn btn-outline-secondary btn-sm mb-2">
                                            <i class="bi bi-person-vcard me-1"></i> 이력서 보기
                                        </a>
                                        <a href="/personal/jobposting/{{jobPostingId}}" class="btn btn-primary btn-sm">
                                            <i class="bi bi-briefcase me-1"></i> 공고 보기
                                        </a>
                                    </div>

                                </div>
                            </div>

                        </div>
                    {{/models.applications}}



                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleSwitches = document.querySelectorAll('.toggleSwitch');

        toggleSwitches.forEach(toggleSwitch => {
            toggleSwitch.addEventListener('click', function () {
                this.classList.toggle('active');
            });
        });
    });
</script>
<!-- 본문 끝 -->

{{> layout/footer}}
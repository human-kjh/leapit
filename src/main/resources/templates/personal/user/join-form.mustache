{{> layout/personal-header}}

            <!-- 본문 -->
            <div class="main container mt-5">
                <div class="signupContainer">
                    <!-- 왼쪽 이미지 영역 -->
                    <div class="leftImageBox mt-5">
                        <!-- 실제 사용 시 이미지 경로를 넣어야 함 -->
                        <img src="/img/logo2.png" alt="회원정보 수정 이미지">
                    </div>

                    <!-- 가운데 세로줄 -->
                    <div class="verticalLine"></div>

                    <!-- 오른쪽 입력 폼 -->
                    <div class="signupForm">
                        <h3 class="mb-4 fw-bold fs-3 text-dark">개인 회원 가입</h3>

                        <!-- 이름 입력 -->
                        <div class="mb-3">
                            <label for="userName" class="form-label">이름</label>
                            <input type="text" class="form-control" id="userName" placeholder="이름을 입력해주세요.">
                        </div>

                        <!-- 아이디 입력 -->
                        <div class="mb-3">
                            <label for="userId" class="form-label">아이디</label>
                            <div class="emailRow">
                                <input type="text" class="form-control" id="userId"
                                    placeholder="4~20자 / 영문, 숫자, 특수문자 *_ 사용가능">
                                <button class="btn btn-outline-primary vertical-text"
                                    onclick="verifyEmail()">중복확인</button>
                            </div>
                        </div>

                        <!-- 비밀번호 입력 -->
                        <div class="mb-3">
                            <label for="password" class="form-label">비밀번호</label>
                            <input type="password" class="form-control" id="password"
                                placeholder="8~16자 / 영문 대소문자, 숫자, 특수문자 조합">
                        </div>

                        <!-- 이메일 입력 -->
                        <div class="mb-3">
                            <label for="email" class="form-label">이메일</label>
                            <input type="email" class="form-control" id="email" placeholder="email@saramin.co.kr">
                            <div class="form-text">취업에 관련된 정보를 받을 때 필요해요.</div>
                        </div>

                        <!-- 생년월일 입력 -->
                        <div class="mb-3">
                            <label for="birthdate" class="form-label">생년월일</label>
                            <input type="date" class="form-control" id="birthdate">
                        </div>

                        <!-- 전화번호 입력 -->
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">전화번호</label>
                            <input type="tel" class="form-control" id="phoneNumber" placeholder="010-1234-5678">
                        </div>

                        <!-- 회원가입 버튼 -->
                        <button class="btn btn-primary btnSignup" onclick="submitSignup()">회원가입 완료</button>
                    </div>
                </div>
            </div>
            <!-- 본문 끝 -->

{{> layout/footer}}
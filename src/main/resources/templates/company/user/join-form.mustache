{{> layout/company-header}}

            <!-- 본문 -->
            <div class="main container mt-5">
                <div class="signupContainer">
                    <!-- 왼쪽: 이미지 -->
                    <div class="leftImageBox">
                        <img src="/img/logo2.png" alt="회원정보 수정 이미지">
                    </div>

                    <!-- 가운데 세로줄 -->
                    <div class="verticalLine"></div>

                    <!-- 오른쪽: 회원가입 폼 -->
                    <div class="signupForm">
                        <h3 class="mb-4 fw-bold fs-3 text-dark">기업 회원 가입</h3>

                        <!-- 아이디 입력 -->
                        <div class="mb-3">
                            <label for="userId" class="form-label">아이디</label>
                            <div class="emailRow">
                                <input type="text" class="form-control" id="userId"
                                    placeholder="4~20자 / 영문, 숫자, 특수문자 *_ 사용가능">
                                <button class="btn btn-outline-primary vertical-text"
                                    onclick="verifyEmail()">인증</button>
                            </div>
                        </div>

                        <!-- 비밀번호 입력 -->
                        <div class="mb-3">
                            <label for="password" class="form-label">비밀번호</label>
                            <input type="password" class="form-control" id="password"
                                placeholder="8~16자 / 영문 대소문자, 숫자, 특수문자 조합" />
                        </div>

                        <!-- 기업 이메일 입력 및 인증 -->
                        <div class="mb-3">
                            <label for="companyEmail" class="form-label">기업 이메일</label>
                            <div class="emailRow">
                                <input type="email" class="form-control" id="companyEmail"
                                    placeholder="company@example.com" />
                            </div>
                        </div>

                        <!-- 담당자 연락처 입력 -->
                        <div class="mb-3">
                            <label for="managerPhone" class="form-label">담당자 연락처</label>
                            <input type="tel" class="form-control" id="managerPhone" placeholder="010-1234-5678" />
                        </div>

                        <!-- 회원가입 버튼 -->
                        <button class="btn btn-primary btnSignup" onclick="submitCompanySignup()">회원가입 완료</button>
                    </div>
                </div>
            </div>
            <!-- 본문 끝 -->

{{> layout/footer}}
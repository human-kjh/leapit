{{> layout/company-header}}

      <!-- 본문 -->
      <div class="main container mt-5">
        <div class="bg-white text-black">
          <div class="container">
            <!-- 회사명 -->
            <div class="d-flex align-items-end gap-2 mb-4">
              <h1 class="display-5 fw-bold">{{model.companyName}}</h1>
                    <a href="/edit" class="text-primary small text-decoration-none">수정</a>
            </div>

            <!-- 기업 정보 -->
            <h2 class="h6 text-dark fw-semibold mb-2">기업 정보</h2>
            <div class="border rounded p-4 d-flex gap-3 align-items-start bg-light">
              <img src="{{model.logoImage}}" alt="로고"
                class="img-thumbnail rounded-circle" style="width: 48px; height: 48px" />
              <div class="small text-secondary">
                <div>
                  <span class="text-muted me-2">연혁</span>{{model.formattedEstablishmentInfo}}
                </div>
                <div class="d-flex">
                  <span class="text-muted me-2" style="min-width: 80px">대표주소</span>
                  <div>
                    <div class="text-dark">
                        {{model.address}}
                    </div>
                    <div class="small mt-1 text-muted d-flex gap-2">
                      <a href="https://map.naver.com" target="_blank" class="text-decoration-none">지도보기</a>
                      <span class="text-secondary">·</span>
                      <a href="#" class="text-primary text-decoration-none">주소복사</a>
                    </div>
                  </div>
                </div>
                <div class="mt-2">
                  <span class="text-muted me-2">주요 서비스</span>
                  <a href="#" class="text-primary text-decoration-none">{{model.mainService}} ↗</a>
                </div>
              </div>
            </div>

            <!-- 회사 소개 -->
            <div class="mt-5">
              <h2 class="h5 fw-semibold mb-3">회사 소개</h2>
              <div class="text-secondary small lh-lg">
                  {{{model.introduction}}}
                <img src="{{model.image}}"
                  alt="차량 관리 이미지" class="img-fluid rounded mt-3" style="max-width: 400px" />
              </div>
            </div>

            <!-- 복지 및 혜택 -->
            <div class="mt-5">
              <h2 class="h5 fw-semibold mb-3">복지 및 혜택</h2>
                {{{model.benefit}}}
            </div>

            <!-- 채용 포지션 -->
            <div class="mt-5">
              <h2 class="h5 fw-semibold mb-3">
                채용중인 포지션 <span class="text-primary fw-bold">5</span>
              </h2>

              <div class="row g-4">
                <div class="col-md-6">
                  <div class="border rounded p-3 position-relative shadow-sm">
                    <div class="text-muted small mb-1">D-32</div>
                    <a href="/position-detail" class="fw-semibold text-dark text-decoration-none d-block">안드로이드 개발 (3년
                      이상)</a>
                    <div class="text-muted small mt-1">
                      Java · Flutter · Realm · Android OS · Kotlin
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="border rounded p-3 position-relative shadow-sm">
                    <div class="text-muted small mb-1">D-12</div>
                    <a href="/position-detail" class="fw-semibold text-dark text-decoration-none d-block">프론트엔드 개발 (5년
                      이상)</a>
                    <div class="text-muted small mt-1">
                      TypeScript · REST API · JavaScript · HTML5 · React
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="d-grid mt-5 mb-5">
              <button type="submit" class="btn btn-primary rounded">수정하기</button>
            </div>
          </div>
        </div>
      </div>
      <!-- 본문 끝 -->

{{> layout/footer}}
{{> layout/personal-header}}

            <div class="main container mt-5">
                <div class="signupContainer">
                    <div class="leftImageBox">
                        <img src="/img/logo2.png" alt="회원정보 수정 이미지">
                    </div>

                    <div class="verticalLine"></div>

                    <!-- 회원 선택 탭 -->
                    <div class="signupForm">
                        <ul class="nav nav-tabs mb-4" id="userTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="personal-tab" data-bs-toggle="tab"
                                    data-bs-target="#personal" type="button" role="tab">개인 회원</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="company-tab" data-bs-toggle="tab" data-bs-target="#company"
                                    type="button" role="tab">기업 회원</button>
                            </li>
                        </ul>

                        <!-- 아이디 입력칸 -->
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="personal" role="tabpanel">
                                <div class="mb-3">
                                    <label for="userId" class="formLabel"></label>
                                    <input type="text" class="formControl" id="userId" placeholder="아이디" required>
                                </div>

                                <!-- 비밀번호 입력칸 -->
                                <div class="mb-3">
                                    <label for="password" class="formLabel"></label>
                                    <input type="password" class="formControl" id="password" placeholder="비밀번호"
                                        required>
                                </div>

                                <!-- 로그인 유지 체크 박스 -->
                                <div class="formCheck mb-3">
                                    <input class="formCheckInput" type="checkbox" id="rememberMe">
                                    <label class="formCheckLabel" for="rememberMe">로그인 유지</label>
                                </div>


                                <!-- 로그인 버튼 -->
                                <button class="btn btn-primary btnSignup" onclick="submitLogin()">로그인</button>

                                <!-- 아이디 찾기 비밀번호 찾기 -->
                                <div class="mt-3 mb-3">
                                    <a href="#">아이디 찾기</a> | <a href="#">비밀번호 찾기</a>
                                </div>

                                <!-- 회원가입 버튼 -->
                                <button class="btn btn-outline-primary btnSignup mt-2"
                                    onclick="goToSignup()">회원가입</button>
                            </div>

                            <!-- 기업 회원 탭 -->
                            <div class="tab-pane fade" id="company" role="tabpanel">

                                <!-- 아이디 입력칸 -->
                                <div class="mb-3">
                                    <label for="companyId" class="formLabel"></label>
                                    <input type="text" class="formControl" id="companyId" placeholder="아이디" required>
                                </div>

                                <!-- 비밀번호 입력칸 -->
                                <div class="mb-3">
                                    <label for="companyPassword" class="formLabel"></label>
                                    <input type="password" class="formControl" id="companyPassword" placeholder="비밀번호"
                                        required>
                                </div>

                                <!-- 로그인 유지 체크 박스 -->
                                <div class="formCheck mb-3">
                                    <input class="formCheckInput" type="checkbox" id="companyRememberMe">
                                    <label class="formCheckLabel" for="companyRememberMe">로그인 유지</label>
                                </div>

                                <!-- 로그인 버튼 -->
                                <button class="btn btn-primary btnSignup" onclick="submitCompanyLogin()">로그인</button>

                                <!-- 아이디 찾기 비밀번호 찾기 -->
                                <div class="mt-3 mb-3">
                                    <a href="#">아이디 찾기</a> | <a href="#">비밀번호 찾기</a>
                                </div>

                                <!-- 회원가입 버튼 -->
                                <button class="btn btn-outline-primary btnSignup mt-2"
                                    onclick="goToCompanySignup()">회원가입</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
{{> layout/footer}}